<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_produto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/descricao_imagem_produto"
        app:srcCompat="@drawable/ic_product_black_24dp" />

    <TextView
        android:id="@+id/text_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/image_produto"
        app:layout_constraintTop_toTopOf="@id/image_produto"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Descrição do Produto"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_vendedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/image_produto"
        app:layout_constraintTop_toBottomOf="@id/text_descricao"
        android:text="Nome do Vendedor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_preco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/image_produto"
        app:layout_constraintTop_toBottomOf="@id/text_vendedor"
        android:text="R$ 999,99"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
