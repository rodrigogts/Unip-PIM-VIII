<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_quantidade"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_descricao"
        android:layout_width="229dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:text="Descrição do Produto"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/text_quantidade"
        app:layout_constraintTop_toTopOf="@id/text_quantidade" />

    <TextView
        android:id="@+id/text_vendedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/text_quantidade"
        app:layout_constraintTop_toBottomOf="@id/text_descricao"
        android:text="Nome do Vendedor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_preco"
        android:layout_width="91dp"
        android:layout_height="17dp"
        android:layout_marginStart="12dp"
        android:text="R$ 999,99"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/text_descricao"
        app:layout_constraintTop_toBottomOf="@id/text_descricao" />

</androidx.constraintlayout.widget.ConstraintLayout>
